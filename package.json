{
  "name": "@chrislyons-dev/flarelette-hono",
  "version": "1.0.0",
  "description": "Type-safe JWT authentication middleware for Hono on Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "archlette": "npx archlette all -f docs/archlette.config.yaml",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src tests",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "check": "npm run lint && npm run licenses:generate && npm run archlette && npm run format && npm run type-check && npm run test",
    "licenses:generate": "npx license-checker-rseidelsohn --out THIRD-PARTY-LICENSES.md",
    "prepublishOnly": "npm build && npm test"
  },
  "keywords": [
    "jwt",
    "authentication",
    "hono",
    "cloudflare-workers",
    "middleware",
    "security",
    "typescript"
  ],
  "author": "Chris Lyons",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrislyons-dev/flarelette-hono.git"
  },
  "bugs": {
    "url": "https://github.com/chrislyons-dev/flarelette-hono/issues"
  },
  "homepage": "https://github.com/chrislyons-dev/flarelette-hono#readme",
  "peerDependencies": {
    "hono": "^4.0.0",
    "zod": "^3.22.0",
    "@hono/zod-validator": "^0.2.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "@hono/zod-validator": {
      "optional": true
    }
  },
  "dependencies": {
    "@chrislyons-dev/flarelette-jwt": "^1.0.0"
  },
  "devDependencies": {
    "@chrislyons-dev/archlette": "^1.2.0",
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.56.0",
    "hono": "^4.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.0.0",
    "license-checker-rseidelsohn": "^4.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
