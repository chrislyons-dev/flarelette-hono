{
  "name": "@chrislyons-dev/flarelette-hono",
  "version": "1.1.0",
  "description": "Type-safe JWT authentication middleware for Hono on Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "archlette": "npx archlette all -f docs/archlette.config.yaml",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src tests",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "check": "npm run lint && npm run licenses:generate && npm run archlette && npm run format && npm run type-check && npm run test:coverage",
    "licenses:generate": "npx license-checker-rseidelsohn --out THIRD-PARTY-LICENSES.md",
    "docs:build": "mkdocs build",
    "docs:serve": "mkdocs serve",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "jwt",
    "authentication",
    "hono",
    "cloudflare-workers",
    "middleware",
    "security",
    "typescript"
  ],
  "author": "Chris Lyons",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrislyons-dev/flarelette-hono.git"
  },
  "bugs": {
    "url": "https://github.com/chrislyons-dev/flarelette-hono/issues"
  },
  "homepage": "https://github.com/chrislyons-dev/flarelette-hono#readme",
  "peerDependencies": {
    "@hono/zod-validator": "^0.2.0",
    "hono": "^4.0.0",
    "hono-pino": "^0.4.0",
    "pino": "^8.0.0",
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "@hono/zod-validator": {
      "optional": true
    },
    "hono-pino": {
      "optional": true
    },
    "pino": {
      "optional": true
    }
  },
  "dependencies": {
    "@chrislyons-dev/flarelette-jwt": "^1.13.0"
  },
  "devDependencies": {
    "@chrislyons-dev/archlette": "^1.2.0",
    "@cloudflare/workers-types": "^4.20251205.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "hono": "^4.10.7",
    "hono-pino": "^0.10.3",
    "license-checker-rseidelsohn": "^4.4.2",
    "pino": "^10.1.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15",
    "wrangler": "^4.53.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
